<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bull">
    <TableLayout android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TextView android:layout_width="wrap_content"
            android:layout_height="1dp"/>
        <TableRow>
            <ImageButton android:id="@+id/ok1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
            <TextView android:id="@+id/ok2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Shrewd Investment"/>
            <ImageButton android:id="@+id/ok3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
        </TableRow>
    </TableLayout>

    <TableLayout android:id="@+id/aha"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:stretchColumns="0,1,2,3"
        android:layout_alignParentBottom="true">
        <TextView android:layout_width="wrap_content"
            android:layout_height="1dp"/>
        <TableRow>
            <Button android:id="@+id/aha1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行情"
                />
            <Button android:id="@+id/aha2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自选"
                />
            <Button android:id="@+id/aha3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="咨询"
                />
            <Button android:id="@+id/aha4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="论坛啊"
                />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ok"
        android:layout_above="@+id/aha">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/detail">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="指数"/>
        <!-- 此处之后再将高度改为wrap -->
        <TableLayout android:id="@+id/zhishu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2">
            <TextView android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <TableRow>
            <Button android:id="@+id/zhishu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                />
            <Button android:id="@+id/zhishu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                />
            <Button android:id="@+id/zhishu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                />
            </TableRow>
            <TableRow>
                <Button android:id="@+id/zhishu4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    />
                <Button android:id="@+id/zhishu5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    />
                <Button android:id="@+id/zhishu6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    />
            </TableRow>
        </TableLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="市场"/>
            <Button android:id="@+id/market1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上证A股"
                />
            <Button android:id="@+id/market2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上证B股"
                />
            <Button android:id="@+id/market3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="深证A股"
                />
            <Button android:id="@+id/market4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="深证B股"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="沪市行业"
                    android:gravity="center_vertical|left"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="..."
                    android:layout_gravity="right"
                    />
            </FrameLayout>
            <Button android:id="@+id/stock1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                />
            <Button android:id="@+id/stock2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                />
            <Button android:id="@+id/stock3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                />
            <Button android:id="@+id/stock4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4"
                />
            <Button android:id="@+id/stock5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="深市行业"
                    android:gravity="center_vertical|left"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="..."
                    android:layout_gravity="right"/>
            </FrameLayout>
            <Button android:id="@+id/stock6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                />
            <Button android:id="@+id/stock7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                />
            <Button android:id="@+id/stock8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                />
            <Button android:id="@+id/stock9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4"
                />
            <Button android:id="@+id/stock10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="龙虎榜"
                    android:gravity="center_vertical|left"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="..."
                    android:layout_gravity="right"/>
            </FrameLayout>
            <Button android:id="@+id/stock11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                />
            <Button android:id="@+id/stock12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                />
            <Button android:id="@+id/stock13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
